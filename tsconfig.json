{
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types"],
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": ".build",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "handlers"],
	"exclude": ["node_modules/*"]
}
